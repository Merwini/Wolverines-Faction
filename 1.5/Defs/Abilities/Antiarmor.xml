		<charges>5</charges>
		<verbProperties Class="CombatExtended.VerbPropertiesCE">
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_M72LAW</defaultProjectile>
