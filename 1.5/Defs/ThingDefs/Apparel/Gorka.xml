<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Gorka ==================== -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Must_Gorka</defName>
    <label>cold weather overall (digital camo)</label>
    <description>An outer garment designed for keeping its wearer at comfortable cold weather while leaving movement unimpeded. Can also provide near perfect gas sealing if worn with a gas mask.</description>
    <graphicData>
      <texPath>Wolverines/Apparel/Digi-Gorka/Digi-Gorka</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <techLevel>Industrial</techLevel>
    <costStuffCount>90</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToMake>16000</WorkToMake>
      <Mass>2</Mass>
      <Bulk>8</Bulk>
      <WornBulk>2</WornBulk>
      <StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.5</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ToxicEnvironmentResistance>0.35</ToxicEnvironmentResistance>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Hands</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Wolverines/Apparel/Digi-Gorka/Digi-Gorka</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Must_LightArmor</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>


</Defs>