<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--Gun Dog Race-->
	<ThingDef ParentName="Must_DroneBase" Name="Must_DogBase" Abstract="True">
		<statBases>
			<MarketValue>900</MarketValue>
			<MoveSpeed>4.6</MoveSpeed>
			<ArmorRating_Sharp>3</ArmorRating_Sharp>
			<ArmorRating_Blunt>5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.1</ArmorRating_Heat>
			<!--These are so high because the body size multiplier is so small-->
			<CarryWeight>100</CarryWeight>
			<CarryBulk>50</CarryBulk>
		</statBases>
		<tools>
			<li>
				<label>left leg</label>
				<labelNoLocation>leg</labelNoLocation>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
			</li>
			<li>
				<label>right lef</label>
				<labelNoLocation>leg</labelNoLocation>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
			</li>
		</tools>
		<race>
			<intelligence>ToolUser</intelligence>
			<thinkTreeMain>Mechanoid</thinkTreeMain>
			<!--TODO correct after creating bodyparts-->
			<body>QuadrupedAnimalWithHooves</body>
			<baseBodySize>1</baseBodySize>
			<baseHealthScale>1</baseHealthScale>
			<lifeStageAges>
				<li>
					<def>Must_DroneCompleted</def>
					<minAge>0</minAge>
					<soundWounded>Pawn_Mech_Pikeman_Wounded</soundWounded>
					<soundDeath>Pawn_Mech_Pikeman_Death</soundDeath>
					<soundCall>Pawn_Mech_Pikeman_Call</soundCall>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
		</race>
		<butcherProducts>
			<Steel>30</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</butcherProducts>
		<comps>
			<li Class="DroneTank.CompProperties_VehicleWeapon">
				<turretRotationFollowPawn>true</turretRotationFollowPawn>
				<layerOverrideNorth>true</layerOverrideNorth>
			</li>
		</comps>
	</ThingDef>

	<PawnKindDef  ParentName="BaseMechanoidKind" Name="Must_DogBaseKind" Abstract="True">
		<weaponMoney>9999~9999</weaponMoney>
		<forceNormalGearQuality>True</forceNormalGearQuality>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<!--TODO change this once correct texture is available-->
					<texPath>Wolverines/Drones/UGFerret/UGFerret</texPath>
					<drawSize>3</drawSize>
				</bodyGraphicData>
			</li>
		</lifeStages>
		<combatPower>180</combatPower>
	</PawnKindDef>

	<ThingDef ParentName="Must_DogBase">
		<defName>Must_DogLMG</defName>
		<label>gun dog</label>
	</ThingDef>

	<PawnKindDef ParentName="Must_DogBaseKind">
		<defName>Must_DogLMG</defName>
		<label>gun dog</label>
		<race>Must_DogLMG</race>
		<weaponTags>
			<li>Must_LMG</li>
		</weaponTags>
		<modExtensions>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>2</min>
					<max>2</max>
				</primaryMagazineCount>
				<forcedAmmoCategory>FullMetalJacket</forcedAmmoCategory>
			</li>
		</modExtensions>
	</PawnKindDef>
</Defs>