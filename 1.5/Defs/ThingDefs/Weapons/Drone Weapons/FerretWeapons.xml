<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BaseGun">
		<defName>Must_FSMG</defName>
		<label>mounted SMG</label>
		<description>A drone-mounted submachine gun chambered for 5.7x28mm pistol cartridges. Belt-fed from a sizeable ammo box to eliminate the need to reload mid-fight.</description>
		<graphicData>
			<texPath>Wolverines/Weapons/UGFerretTurretSMG</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>None</tradeability>
		<destroyOnDrop>true</destroyOnDrop>
		<soundInteract>Interact_SMG</soundInteract>
		<weaponClasses>
			<li>RangedHeavy</li>
		</weaponClasses>
		<statBases>
			<MarketValue>700</MarketValue>
			<Mass>4</Mass>
			<Bulk>5.75</Bulk>
			<ShotSpread>0.12</ShotSpread>
			<SwayFactor>0.55</SwayFactor>
			<RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>0.95</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_FN57x28mm_FMJ</defaultProjectile>
				<warmupTime>0.9</warmupTime>
				<range>31</range>
				<ticksBetweenBurstShots>6</ticksBetweenBurstShots>
				<burstShotCount>6</burstShotCount>
				<soundCast>Shot_MachinePistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<recoilPattern>Mounted</recoilPattern>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>300</magazineSize>
				<reloadTime>14.5</reloadTime>
				<ammoSet>AmmoSet_FN57x28mm</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aimedBurstShotCount>3</aimedBurstShotCount>
				<aiAimMode>SuppressFire</aiAimMode>
				<aiUseBurstMode>False</aiUseBurstMode>
			</li>
		</comps>
		<weaponTags>
			<li>Must_FerretSMG</li>
			<li>CE_AI_Suppressive</li>
			<li>CE_MachineGun</li>
			<li>NoSwitch</li>
		</weaponTags>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.44</cooldownTime>
				<armorPenetrationBlunt>3.5</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
		</tools>
