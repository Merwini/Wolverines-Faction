<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BaseGun">
		<defName>Must_PC_LMG</defName>
		<label>mounted LMG</label>
		<description>A drone-mounted light machine gun chambered for .277 cartridges. Belt-fed from a sizeable ammo box to eliminate the need to reload mid-fight.</description>
		<graphicData>
			<texPath>Wolverines/Weapons/TurretLight_MGgun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5,1.5</drawSize>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<tradeability>None</tradeability>
		<destroyOnDrop>true</destroyOnDrop>
		<soundInteract>Interact_Rifle</soundInteract>
		<weaponClasses>
			<li>RangedHeavy</li>
		</weaponClasses>
		<statBases>
			<MarketValue>1000</MarketValue>
			<Bulk>12.13</Bulk>
			<Mass>7.8</Mass>
			<ShotSpread>0.08</ShotSpread>
			<SwayFactor>1.21</SwayFactor>
			<RangedWeapon_Cooldown>0.4</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>1.22</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_277Fury_FMJ</defaultProjectile>
				<warmupTime>1.0</warmupTime>
				<range>65</range>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<soundCast>Shot_CE_BattleRifle</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>3</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<recoilPattern>Mounted</recoilPattern>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>300</magazineSize>
				<reloadTime>17.8</reloadTime>
				<ammoSet>AmmoSet_277Fury</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiUseBurstMode>FALSE</aiUseBurstMode>
				<aiAimMode>SuppressFire</aiAimMode>
				<aimedBurstShotCount>5</aimedBurstShotCount>
			</li>
		</comps>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<weaponTags>
			<li>Must_PC_LMG</li>
		</weaponTags>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2.02</cooldownTime>
				<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
		</tools>
	</ThingDef>
</Defs>