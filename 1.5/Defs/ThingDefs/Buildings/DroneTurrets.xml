<Defs>
	<ThingDef ParentName="TurretBase" Abstract="True" Name="Must_TurretDrone">
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
		</graphicData>
		<tradeability>None</tradeability>
		<comps>
			<li Class="CompProperties_Stunnable">
				<affectedDamageDefs>
					<li>EMP</li>
				</affectedDamageDefs>
